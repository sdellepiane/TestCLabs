<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MyActivity"
        android:background="@drawable/shape_round_gray"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tviTitle"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/sTitleFilter"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

         <TextView
            android:id="@+id/tviSpanishLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/sInitLeagueName"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

         <TextView
            android:id="@+id/tviItalianLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/sItalianLeague"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"/>

         <TextView
            android:id="@+id/tviBrazilianLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/sBrasileirao"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</RelativeLayout>